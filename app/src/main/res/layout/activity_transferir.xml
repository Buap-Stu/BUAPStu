<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferirActivity"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="50dp"
            >

            <TextView
                android:id="@+id/text_rest_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="999 creditos"
                android:textColor="@android:color/holo_green_light"
                android:textSize="22sp"
                />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/containerSearchStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introdudizca la matricula a la cual desea trasferir"
                    android:textColor="@color/white"
                    />


                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:id="@+id/BuscarMatricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/matricula"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="Matricula"
                    android:textColor="@color/foreground"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/input_matricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:scaleType="centerCrop"
                    android:background="@color/white"
                    android:textColor="@android:color/black"
                    />




                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_search_student"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Buscar" />
                    <ProgressBar
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/progressSearch"
                        />
                </FrameLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="10dp"/>

                <TextView
                    tools:visibility="visible"
                    android:id="@+id/textDoNotExist"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/containerTransferStudent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos del Alumno"
                    android:textSize="25sp"
                    android:textColor="@color/green"
                    />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>
                    <TextView

                        android:id="@+id/textNameStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Name Generric"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matricula:"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/textMatriculaStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Matricula Generic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Creditos"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="Creditos"
                    android:textColor="@color/foreground"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/input_creditos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:scaleType="centerCrop"
                    android:background="@color/white"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="30dp"
                    />

                <ProgressBar
                    android:id="@+id/progressTransfer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/button_transfer_credits"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Transferir" />
                <Button
                    android:id="@+id/button_cancel_transfer"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:backgroundTint="@color/red"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>