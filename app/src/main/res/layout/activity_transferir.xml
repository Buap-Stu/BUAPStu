<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferirActivity"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="507dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_rest_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="22sp"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:id="@+id/BuscarMatricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/matricula"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="Matricula"
                    android:textColor="@color/foreground"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/input_matricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:scaleType="centerCrop"
                    android:background="@color/white"
                    android:textColor="@android:color/black"
                    />

                    <TextView
                        android:id="@+id/Creditos"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:text="Creditos"
                        android:textColor="@color/foreground"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/input_creditos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:scaleType="centerCrop"
                        android:background="@color/white"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="30dp"
                        />

                    <ProgressBar
                        android:id="@+id/progressTransfer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        />

                    <Button
                        android:id="@+id/button_transfer_credits"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Transferir" />
                    <Button
                        android:id="@+id/button_cancel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:backgroundTint="@color/red"/>



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>